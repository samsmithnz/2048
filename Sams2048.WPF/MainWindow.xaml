        <Button x:Name="btn2" Content="btn_x1y3" HorizontalAlignment="Left" Margin="690,162,0,0" VerticalAlignment="Top" Height="60" Width="58" FontSize="24" FontWeight="Bold"/>

    </Grid>
</Window>
