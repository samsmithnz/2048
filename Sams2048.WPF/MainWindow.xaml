        <Rectangle HorizontalAlignment="Left" Height="163" Margin="632,279,0,0" Stroke="Black" VerticalAlignment="Top" Width="145"/>
        <Label Content="Before:" HorizontalAlignment="Left" Margin="477,252,0,0" VerticalAlignment="Top"/>
        <Label Content="After:" HorizontalAlignment="Left" Margin="632,253,0,0" VerticalAlignment="Top"/>
