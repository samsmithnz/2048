        <Button x:Name="btn_x2y1" Content="btn_x2y1" HorizontalAlignment="Left" Margin="150,242,0,0" VerticalAlignment="Top" Height="100" Width="100" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="btn_x3y1" Content="btn_x3y1" HorizontalAlignment="Left" Margin="150,342,0,0" VerticalAlignment="Top" Height="100" Width="100" FontSize="24" FontWeight="Bold"/>
